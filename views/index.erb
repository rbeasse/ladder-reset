<% yaml['releases'].each do |release| %>
  <div class="bg-catppuccin-mantle p-2 pl-4 mb-2 border-l-2 border-catppuccin-text release-block" data-target="<%= release['time'] %>">
    <div class="flex justify-between items-start mb-4">
      <div>
        <h1 class="font-bold text-xl leading-none"><%= release['name'] %></h1>
        <p class="text-sm text-catppuccin-subtext0"><%= release['title']%></p>
      </div>

      <div class="text-right">
        <p class="bg-catppuccin-surface0 text-sm px-2 py-1 local-time"><%= release['time'] %></p>
      </div>
    </div>
    
    <div class="flex justify-between items-center mt-6">
      <div class="flex space-x-3">
      <% release['buttons'].each do |button_key, button_data| %>
        <%= button(button_key, button_data['url'], icon: button_data['icon']) %>
      <% end %>
      </div>

      <div class="countdown text-right" data-time="<%= release['time'] %>">
        <span class="text-lg font-bold"></span>
      </div>
    </div>
  </div>
<% end %>
